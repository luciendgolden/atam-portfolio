---
import { ViewTransitions } from "astro:transitions";
import BaseHead, {
    type Props as HeadProps,
} from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

export type Props = HeadProps & { showHeader?: boolean };

const { showHeader = true, ...head } = Astro.props;
---

<!doctype html>
<html lang="en" class="antialiased break-words">
    <head>
        <BaseHead {...head} />
        <script>
            if (localStorage.theme === "dark") {
                document.documentElement.classList.add("dark");
            }
        </script>
        <ViewTransitions />
    </head>
    <body class="bg-main text-main min-h-screen">
        <Nav />
        <div class="max-w-[85rem] mx-auto pt-12 pb-10 px-4 sm:px-6 lg:px-8 md:pt-24">
            <main id="page-content" class="transition-all duration-300 ease-in-out">
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>

<!-- Preline -->
<script is:inline src="/node_modules/preline/preline.js"></script>