---
import { type CollectionEntry } from 'astro:content';
import ArrowRight from '../icons/ArrowRight.astro';

type Props = { project: CollectionEntry<'projects'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { project, class: className, headingLevel = 'h2' } = Astro.props;
const { title, description, seo } = project.data;
const TitleTag = headingLevel;
---
<a class:list={['flex justify-between items-start group overflow-hidden', className]} href={`/projects/${project.slug}/`}>
    <div class="grow">
        {seo?.image && (
            <img src={seo.image.src} alt={seo.image.alt || `Image for ${title}`} class="w-full h-48 object-cover rounded-lg" />
        )}
        <div class="p-4">
            <TitleTag class="text-xl font-semibold text-gray-800 group-hover:text-gray-600 dark:text-gray-200">
                {title}
            </TitleTag>
            {description && <div class="mt-1 text-sm leading-normal">{description}</div>}
        </div>
        <div class="p-4 text-right">
            <span class="inline-flex items-center font-sans group-hover:underline group-hover:decoration-dashed group-hover:underline-offset-4 group-hover:decoration-1 sm:inline-flex sm:gap-1 sm:items-center sm:shrink-0">
                View Project <ArrowRight class="ml-2 w-4 h-4" />
            </span>
        </div>
    </div>
</a>
