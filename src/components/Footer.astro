---
import siteConfig from "../data/site-config";
import iconMap from "../data/icon-map";

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="mt-auto w-full max-w-[85rem] py-10 mx-auto">
    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-5">
        <div class="inline-flex items-center">
            <a
                class="text-xl font-semibold"
                href={`${import.meta.env.BASE_URL}/`}
                aria-label="Brand"
            >
                {siteConfig.title}
            </a>

            <div class="border-s ps-5 ms-5">
                <p class="text-sm text-neutral-400">&copy; {new Date().getFullYear()}&nbsp;</p>
              </div>
        </div>
        <!-- End Col -->

        {
            navLinks.length > 0 && (
                <ul class="text-center">
                    {navLinks.map((link) => (
                        <li class="inline-block relative pe-8 last:pe-0 last-of-type:before:hidden before:absolute before:top-1/2 before:end-3 before:-translate-y-1/2 before:content-['/'] before:text-gray-300 dark:before:text-neutral-600">
                            <a
                                class="inline-flex gap-x-2 text-sm text-gray-500 hover:text-gray-800 dark:text-neutral-500 dark:hover:text-neutral-200"
                                href={`${import.meta.env.BASE_URL}${link.href}`}
                            >
                                {link.text}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }

        <!-- Social Brands -->
        {
            socialLinks.length > 0 && (
                <div class="md:text-end space-x-2">
                    {socialLinks.map((link) => (
                        <a
                            class="size-8 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-full border border-transparent text-gray-500 hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:bg-neutral-700"
                            href={`${import.meta.env.BASE_URL}${link.href}`}
                        >
                            {link.icon && <Fragment set:html={ iconMap[link.icon] } />}
                        </a>
                    ))}
                </div>
            )
        }
        <!-- End Social Brands -->
    </div>
    <!-- End Grid -->
</footer>
